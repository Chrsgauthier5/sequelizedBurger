<div id="container">
    <h1 class="display-4">EAT-DA-BURGER</h1>
    <div class="row">

        <div class="col-sm-3" id="burgerEat">
            <h2>On the Menu</h2>
            <ul>
                {{#each burgers}}  {{#unless this.devoured}}
                <li>
                    <h3>{{this.burger_name}}</h3>
                    <p>Made by Chef {{this.Chef.chef_name}}</p>
                    <form class="create-form">
                        <div class="form-group">
                            <input type="text" name="customer_name" class="customerName" id="{{id}}" value="Order" data-id="{{id}}"
                              onmouseover="this.value='Customer Name'" onfocus="this.value=''">
                            <button class="btn btn-sm devour" type="submit" data-id="{{id}}" data-ate-burger="{{devoured}}" hidefocus="true" ></button>
                        {{!-- onclick="addCustomer(this.form)" --}}
                        </div>
                    </form>
                </li>
                {{/unless}} {{/each}}  
            </ul>
        </div>

        <div class="col-sm-6" id="burgerOrder">
            <div>
                <img class="card-img-top" src="/assets/img/burger.png" alt="Burger Image">
            </div>
            <form class="create-form">
                <div class="form-group">
                    <label for="burgerName">Enter the name of the burger you would like to make.</label>
                    <input type="text" name="burger_name" id="burgerName" value=" Burger Name" onfocus="this.value=''">
                    <input type="text" name="chef_name" id="chefName" value=" Chef Name" onfocus="this.value=''">
                </div>
                <button class="btn btn-lg" type="submit">Make your Burger</button>
            </form>
        </div>

        <div class="col-sm-3" id="burgerAte">
            <h2>Consumption Tracker</h2>
            <ul>
                {{#each burgers}} {{#if this.devoured}}
                <li>
                    <h3>{{this.burger_name}}</h3>
                    <p>Eaten by {{this.Customer.customer_name}}</p>
                    <button class="btn btn-sm delete" type="submit" data-id="{{id}}">Erase Evidence</button>
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>

    </div>
</div>